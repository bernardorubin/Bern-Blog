<div class="container">
  <h1> <%= Faker::Zelda.game  %> </h1>
</div>
  <img src="http://unsplash.it/1300/700" alt="" class="img-responsive">
  <div class="container">
  <hr>
  <% 3.times do %>
  <p> <%= Faker::Lorem.paragraph(15) %></p>
  <% end %>
  <span class="row">
  <p class="pull-right">
    <%= Faker::Date.backward(14) %>
  </p>
<hr class="hidden-md hidden-lg">
  <div class="row container hidden-md hidden-lg">
  <span class="pull-left">
    <h3>
  <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
    <%= Faker::Number.number(3) %>
  </h3>
  </span>
  <span class="pull-right">
  <h3><span class="glyphicon glyphicon-bookmark" aria-hidden="true"></span></h3>
  </span>
  </div>
<span class="pull-left">
  <h4><%= Faker::Zelda.character %></h4>
</span>
<div class="row"></div>

  <div class="row container">
   <span class="col-lg-8 ">
  <ul class="media-list">
  <li class="media">
    <div class="media-left">
      <a href="#">
        <img class="media-object" src="http://unsplash.it/200" alt="...">
      </a>
    </div>

    <div class="media-body">
      <h2 class="media-heading"><%= Faker::Zelda.character %></h2>
    <p> <%= Faker::Lorem.paragraph(5) %></p>
    </div>

  </li>
</ul>
</span>
</div>
</div>

<div class="container">
  <div class="col-lg-8 col-lg-offset-2">
<div class="row">
  <h1>Leave a comment</h1>
  <form action="submit">
    <div class="form-group">
    <!-- <label for="exampleTextarea">Example textarea</label> -->
    <textarea class="form-control" id="exampleTextarea" rows="3" name="comment" placeholder="Comment Here"></textarea>
  </div>
  <div class="form-group row">
  <label for="example-text-input" class="col-xs-2 col-form-label"><%= Faker::Zelda.character %></label>
  <div class="col-xs-10">
    <input class="form-control" type="text" placeholder="Comment Author Name" id="example-text-input">
  </div>
  <hr>
</div>
</form>
</div>
</div>

<hr>

<% 5.times do  %>
<div class="col-lg-8 col-lg-offset-2">
<div class="row">
  <ul class="media-list">
    <li class="media">
      <div class="media-left">
        <a href="#">
          <img class="media-object" src="http://unsplash.it/100" alt="...">
        </a>
      </div>
      <div class="media-body">
        <h2 class="media-heading"><%= Faker::Zelda.character %></h2>
        <p> <%= Faker::Lorem.paragraph(5) %></p>
      </div>
    </li>
  </ul>
</div>
<div class="row">

    <span class="pull-left">
      <h3>
    <%= Faker::Zelda.character %>
      </h3>
    </span>
    <span class="pull-right">
    <h4> <%= Faker::Date.backward(14) %></h4>
    </span>

</div>
</div>
<% end  %>
</div>

<div class="col-xs-12 more">
  <h1>More Comments</h1>
</div>
